<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiagnosisManual"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/diagnosis_background2"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/diagnosis_background2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manual" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_gray"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_secession"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_secession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_gray"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_logout" />

    <TextView
        android:id="@+id/manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Manual"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="252dp"
        android:layout_height="325dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/manual_img"
        app:layout_constraintEnd_toEndOf="@+id/diagnosis_background2"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toBottomOf="@+id/order" />

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="순서에 맞춰 찍으세요"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diagnosis_background2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="236dp"
        android:text="1.왼쪽 어금니"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="10dp"
        android:text="2.아래 앞니"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="236dp"
        android:text="3.오른쪽 어금니"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:text="4.왼쪽 위 어금니"
        android:textColor="@color/green"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="10dp"
        android:text="5.위쪽 앞니"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="60dp"
        android:text="6.오른쪽 위 어금니"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/diagnosis_text"
        android:layout_width="366dp"
        android:layout_height="56dp"
        android:background="@drawable/diagnosis_background"
        android:gravity="center"
        android:text="     진단 결과 보기"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis_background2" />

    <ImageView
        android:id="@+id/diagnosis_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/diagnosis_text"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_text"
        app:layout_constraintTop_toTopOf="@+id/diagnosis_text"
        app:srcCompat="@drawable/diagnosis_img" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:text="※치아가 최대한 정면에 보이게 찍어주세요"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/diagnosis_background2"
        app:layout_constraintTop_toBottomOf="@+id/order" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResultDiagnosis">

    <ImageView
        android:id="@+id/findDay_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_background" />

    <EditText
        android:id="@+id/findDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="ex)2023-06-02"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/findDay_background"
        app:layout_constraintStart_toStartOf="@+id/findDay_background"
        app:layout_constraintTop_toTopOf="@+id/findDay_background" />

    <Button
        android:id="@+id/btn_findDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_gray"
        android:text="날짜 탐색"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/findDay_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/day_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_background" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_text_size1"
        app:layout_constraintEnd_toEndOf="@+id/day_background"
        app:layout_constraintStart_toStartOf="@+id/day_background"
        app:layout_constraintTop_toTopOf="@+id/day_background" />

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
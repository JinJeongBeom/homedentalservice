<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResultDiagnosis">

    <ImageView
        android:id="@+id/findDay_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_background" />

    <EditText
        android:id="@+id/findDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="ex)2023-06-02"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/findDay_background"
        app:layout_constraintStart_toStartOf="@+id/findDay_background"
        app:layout_constraintTop_toTopOf="@+id/findDay_background" />

    <Button
        android:id="@+id/btn_findDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_gray"
        android:text="날짜 탐색"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/findDay_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/day_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_background" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_text_size1"
        app:layout_constraintEnd_toEndOf="@+id/day_background"
        app:layout_constraintStart_toStartOf="@+id/day_background"
        app:layout_constraintTop_toTopOf="@+id/day_background" />

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/images"
                />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/images"
                />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_perm_media_24" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="왼쪽 위 어금니"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/images"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="오른쪽 위 어금니"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/images" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:text="왼쪽 아래 어금니"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/images" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="55dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="오른쪽 아래 어금니"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/images"
        app:layout_constraintTop_toTopOf="@id/images" />



</androidx.constraintlayout.widget.ConstraintLayout>